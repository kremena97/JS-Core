{{> header}}
<section id="allSongsView">
    <div class="background-spotify">
        <div class="song-container">
            <h1>All Songs</h1>
            <a href="#/createSong">
                <button type="button" class="btn-lg btn-block new-song-btn">Add a new song</button>
            </a>
            {{#each songs}}
            <div class="song">
                <h5>Title: {{title}}</h5>
                <h5>Artist: {{artist}}</h5>
                <img class="cover" src="{{imageURL}}"/>
                {{#if isCreator}}
                <p>Likes: {{likes}}; Listened {{listened}} times</p>
                <a href="#/remove/{{_id}}"><button type="button" class="btn btn-danger mt-4">Remove</button></a>
                <a href="#/listen/{{_id}}"><button type="button" class="btn btn-success mt-4">Listen</button></a>
                {{else}}
                <p>Likes: {{likes}}</p>
                <a href="#/like/{{_id}}"><button type="button" class="btn btn-primary mt-4">Like</button></a>
                {{/if}}
            </div>
           {{/each}}
        </div>
    </div>
</section>
{{> footer}}